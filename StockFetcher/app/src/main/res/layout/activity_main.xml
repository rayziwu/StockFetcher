<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:importantForAutofill="noExcludeDescendants"
    tools:context=".MainActivity"
    tools:targetApi="o">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="8dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTopOutsideMainChart"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:clickable="true"
                android:focusable="true"
                android:linksClickable="true"
                android:maxLines="1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:gravity="start"
                tools:text="最愛(25)  輪播:XXX  3/57" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/btnFavorite"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="6dp"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:text="♡"
                android:textColor="#FF0000"
                android:textSize="18sp"
                android:contentDescription="@string/favorite"/>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="5"
            android:layout_marginTop="0dp">

            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/mainChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <com.example.stockfetcher.VolumeProfileView
                android:id="@+id/vpView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="1dp">

            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/k_kdChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <EditText
                android:id="@+id/comparisonStockIdEditText"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:layout_gravity="top|end"
                android:layout_marginTop="0dp"
                android:layout_marginEnd="200dp"
                android:background="@drawable/bg_compare_edittext"
                android:paddingBottom="6dp"
                android:importantForAutofill="no"
                android:autofillHints=""
                android:hint="@string/hint_compare_symbol"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:paddingStart="5dp"
                android:singleLine="true"
                android:imeOptions="actionDone" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:layout_marginTop="1dp">

            <com.github.mikephil.charting.charts.CombinedChart
                android:id="@+id/indicatorChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <!-- ✅ 左上角模式文字 -->
            <TextView
                android:id="@+id/indicatorModeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|start"
                android:layout_marginStart="6dp"
                android:layout_marginTop="6dp"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:text="MACD"
                android:textColor="@android:color/white"
                android:textSize="12sp"
                android:textStyle="bold"
                android:background="@drawable/bg_btn_round"/>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <EditText
                android:id="@+id/stockIdEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.2"
                android:importantForAutofill="no"
                android:autofillHints=""
                android:hint="@string/hint_stock_id"
                android:inputType="text"
                android:imeOptions="actionDone"
                android:singleLine="true"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray" />

            <EditText
                android:id="@+id/startDateEditText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:hint="@string/hint_start_date"
                android:inputType="date"
                android:imeOptions="actionDone"
                android:importantForAutofill="no"
                android:autofillHints=""
                android:singleLine="true"
                android:drawableEnd="@android:drawable/ic_menu_my_calendar"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/white"
                android:textColorHint="@android:color/darker_gray" />

            <Button
                android:id="@+id/intervalSwitchButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:layout_marginStart="8dp"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="@string/interval_day"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"/>

            <Button
                android:id="@+id/screenerButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.1"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:text="@string/screener_btn"
                android:imeOptions="actionDone"
                android:backgroundTint="?attr/colorPrimary"
                android:textColor="?attr/colorOnPrimary"/>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>